<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.konka.dao.TestDao" >
  <resultMap id="BaseResultMap" type="com.konka.model.Test" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, name
  </sql>
  <select id="query" parameterType="com.konka.model.Test" resultType="com.konka.model.Test" >
  	select 
	<include refid="Base_Column_List" />
	 from test 
	<where>
  	<if test="id != null">
  		and id = #{id}
  	</if>
  	<if test="name != null">
  		and name = #{name}
  	</if>
  	</where>
  </select>
  
  <insert id="insert" parameterType="com.konka.model.Test">
  	insert into test (name) values(#{name})
  </insert>
</mapper>